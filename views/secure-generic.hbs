<div class="p-5 mb-4 bg-gradient rounded-3">
    <div class="container-fluid py-5">
        <h1 class="display-5 fw-bold">{{title}}</h1>
        <!--   loop through the token payload object to display the properties and values-->
        {{#each payload}}
            <p class="col-md-8 fs-4">{{@key}}: {{this}}</p>
        {{/each}}
        <!--   Only show button if action is specified-->
        {{#if action}}
            <form action="{{action}}?access_token={{token}}" method="post">
            <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        {{/if}}
    </div>
</div>
